{
  "name": "simon-kjellberg",
  "version": "1.0.0",
  "private": true,
  "description": "My personal website",
  "repository": "https://github.com/simonkberg/simon-kjellberg",
  "license": "MIT",
  "author": "Simon Kjellberg <simon.kjellberg@gmail.com> (https://simonkjellberg.com)",
  "scripts": {
    "build": "next build src",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint . --fix",
    "prettier:check": "prettier --list-different '**/*.{js,json,md}'",
    "prettier:format": "prettier --write '**/*.{js,json,md,ya?ml}'",
    "start": "nodemon scripts/start.js",
    "serve": "node scripts/serve.js",
    "test": "flow check && yarn eslint:check && yarn prettier:check && jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "flow focus-check",
      "git add"
    ],
    "*.{json,md,ya?ml}": [
      "prettier --write",
      "git add"
    ]
  },
  "bundlesize": [
    {
      "path": ".next/static/chunks/*.js",
      "maxSize": "100 kB"
    },
    {
      "path": ".next/static/runtime/*.js",
      "maxSize": "10 kB"
    },
    {
      "path": ".next/static/*/pages/*.js",
      "maxSize": "30 kB"
    }
  ],
  "dependencies": {
    "@slack/client": "4.8.0",
    "apollo-cache-inmemory": "1.3.5",
    "apollo-client": "2.4.2",
    "apollo-link": "1.2.3",
    "apollo-link-http": "1.5.5",
    "apollo-link-ws": "1.0.9",
    "apollo-server-express": "2.1.0",
    "apollo-utilities": "1.0.21",
    "common-tags": "1.8.0",
    "compression": "1.7.3",
    "connect-redis": "3.4.0",
    "cross-fetch": "2.2.2",
    "dataloader": "1.4.0",
    "dotenv": "6.1.0",
    "emoji-datasource": "4.1.0",
    "emotion": "9.2.12",
    "emotion-server": "9.2.12",
    "emotion-theming": "9.2.9",
    "express": "4.16.4",
    "express-session": "1.15.6",
    "graphql": "14.0.2",
    "graphql-tag": "2.10.0",
    "helmet": "3.14.0",
    "http-status": "1.2.0",
    "invariant": "2.2.4",
    "ioredis": "4.2.0",
    "lru-cache": "4.1.3",
    "memoize-one": "4.0.2",
    "minimist": "1.2.0",
    "morgan": "1.9.1",
    "next": "7.0.2",
    "next-offline": "3.0.2",
    "polished": "2.2.0",
    "prop-types": "15.6.2",
    "react": "16.5.2",
    "react-apollo": "2.2.4",
    "react-dom": "16.5.2",
    "react-emotion": "9.2.12",
    "react-spring": "5.9.2",
    "recompose": "0.30.0",
    "sanitize.css": "8.0.0",
    "screenfull": "3.3.3",
    "serve-favicon": "2.5.0",
    "styled-tools": "1.5.2",
    "subscriptions-transport-ws": "0.9.15",
    "url-polyfill": "1.1.0"
  },
  "devDependencies": {
    "@babel/core": "7.1.2",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.0.0",
    "@babel/plugin-proposal-optional-chaining": "7.0.0",
    "@babel/preset-flow": "7.0.0",
    "@simonkberg/eslint-config": "10.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "23.6.0",
    "babel-plugin-emotion": "9.2.11",
    "bundlesize": "0.17.0",
    "chokidar": "2.0.4",
    "eslint": "5.7.0",
    "file-loader": "2.0.0",
    "flow-bin": "0.83.0",
    "husky": "1.1.2",
    "jest": "23.6.0",
    "jest-emotion": "9.2.11",
    "lint-staged": "7.3.0",
    "nodemon": "1.18.4",
    "prettier": "1.14.3",
    "raw-loader": "0.5.1",
    "react-test-renderer": "16.5.2",
    "url-loader": "1.1.2",
    "webpack-bundle-analyzer": "3.0.3"
  }
}
